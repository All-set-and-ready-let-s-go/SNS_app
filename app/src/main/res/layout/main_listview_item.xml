<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/main_post_content_img"
        android:layout_width="390dp"
        android:scaleType="centerCrop"
        android:layout_height="190dp"
        android:contentDescription="@string/main_listview_item_image_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_post_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_post_content_img" />

    <TextView
        android:id="@+id/main_post_content_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@id/main_post_content_like"
        app:layout_constraintTop_toBottomOf="@id/main_post_content_img" />

    <ImageButton
        android:id="@+id/main_post_content_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/unfavorite_icon"
        android:background="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_post_content_img"
        android:contentDescription="@string/main_listview_item_button_description" />

</androidx.constraintlayout.widget.ConstraintLayout>